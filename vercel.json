{
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://www.vitaeology.com/api/:path*",
      "has": [
        {
          "type": "host",
          "value": "vitaeology.com"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/monitoring",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/ai-coach/cron/combined",
      "schedule": "0 23 * * *"
    },
    {
      "path": "/api/cron/challenge-emails",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/affiliate-emails",
      "schedule": "0 9 * * *"
    }
  ]
}
